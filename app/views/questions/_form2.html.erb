  </div>
<% end %>

<%= form_for(answer) do |f| %>
  <%= f.hidden_field :question_id, {value: answer.question_id} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows:2, class:"form-control" %>
  </div>
  <%= f.submit %>
<% end %>
